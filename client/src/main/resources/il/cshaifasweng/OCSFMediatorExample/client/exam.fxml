<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="820.0" prefWidth="1368.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.ExamController">
   <children>
      <Label fx:id="examHeaderLabel" alignment="CENTER" layoutX="1.0" layoutY="14.0" prefHeight="53.0" prefWidth="1367.0" text="Enter your id in order to start the exam. good luck!">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <Label fx:id="idLabel" layoutX="38.0" layoutY="103.0" prefHeight="35.0" prefWidth="833.0" text="Enter your id here: (note that the timer will start when you will submit your id)">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <TextField fx:id="idTF" layoutX="38.0" layoutY="152.0">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <Button fx:id="idBtn" layoutX="38.0" layoutY="210.0" mnemonicParsing="false" onAction="#SubmitId" text="Submit id">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <ScrollPane fx:id="examPane" layoutX="1.0" layoutY="131.0" prefHeight="588.0" prefWidth="1367.0" visible="false">
         <content>
            <VBox fx:id="examContentPane" prefHeight="589.0" prefWidth="1368.0">
               <children>
                  <Label fx:id="instructionsLabel" prefHeight="107.0" prefWidth="934.0" text="Exam Instructions:">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </content>
      </ScrollPane>
      <Button fx:id="answersBtn" layoutX="38.0" layoutY="755.0" mnemonicParsing="false" onAction="#SubmitAnswersOnTime" text="Submit answers" visible="false">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Label fx:id="timerLabel" alignment="CENTER" layoutX="2.0" layoutY="76.0" prefHeight="35.0" prefWidth="1367.0" text="Label" visible="false">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
